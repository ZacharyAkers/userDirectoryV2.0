<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{name}}</title>
    <link rel="stylesheet" href="/public/css/userSheet.css">
  </head>
  <body>
    <nav><a href="/unemployed">Unemployed</a> | <a href="/">Home</a> | <a href="/employed">Employed</a></nav>
    {{#users}}
    <div class="top">
      <img src="{{avatar}}" alt="{{name}}'s avatar" class="avatar">
      <div class="contactInfo">
        <h1>{{name}}</h1>

        <p>
          {{#address.city}}{{address.city}}, {{/address.city}}<a href="/country/{{address.country}}">{{address.country}}</a> |
          {{#job}}{{job}} @ {{company}}{{/job}}
          {{^job}}<span class="unemployed">Available for hire</span>{{/job}}
          <br>
          {{email}} | {{phone}}
        </p>
      </div>
    </div>

    <div class="bottom">
      <div class="botLeft">
        {{#university}}<p>Education</p>{{/university}}
        <p>Skills</p>
      </div>
      <div class="botRight">
        {{#university}}<p>{{university}}</p>{{/university}}
        <ul class="skillsList">{{#skills}}<li class="skills"><a href="/skill/{{.}}">{{.}}</a></li>{{/skills}}</ul>

      </div>
    </div>
    {{/users}}
  </body>
</html>